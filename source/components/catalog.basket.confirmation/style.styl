@import '../../styl/component-include.styl'

.b-catalog-basket-confirmation

  h1
    font-size 32px
    margin-bottom 35px

  p
    min-height 45px
    margin-bottom 40px

    @media( max-width 991px )
      min-height auto

  .b-button

    @media( max-width 991px )
      width 100%
      display block

  &__payment,
  &__info
    display flex
    justify-content space-between
    margin-bottom 15px
    min-height 100px

    div
      margin-right 5px

    .h6
      color #A2A2A2
      margin-bottom 10px

    b
      font-size 24px
      font-weight normal
      color #fff

    i
      display block
      font-size 14px
      font-style normal
      color #fff
      line-height 1