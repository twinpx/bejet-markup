@import '../../styl/component-include.styl'

.b-ce
  
  &__banner
    background-color $dark-grey
    padding 28px 0
    
    @media ( max-width: $media-width1 )
      text-align center
    
    &__text
      
      h3
        margin 0
        color #fff
        font-size 10.5pt
        font-weight bold
        line-height 50px
          
        span
          display inline-block
          vertical-align middle
          line-height 1.4
      
    
    &__button
      text-align right
      
      .b-button
        background-color $brand-color
        

  