@import '../../styl/component-include.styl'

.b-faq
  
  &-item
    background-color #242424
    margin-bottom 1px
    min-height 80px
    position relative
    
  &-question
    position relative
    
    a:not(.b-button)
      display block
      position relative
      padding 26px 110px 30px 30px
      
      &:focus
        color #98c810
      
      &:after
        content ''
        display block
        width 80px
        height 80px
        background embedurl( 'img/minus.gif' ) no-repeat center center #1a1a1a
        position absolute
        top 0
        right 0
        transition( background-color 0.3s ease )
        
      &:hover:after,
      &:focus:after
        background embedurl( 'img/minus-hover.gif' ) no-repeat center center #98c810
      
      &:active:after
        background embedurl( 'img/minus-hover.gif' ) no-repeat center center #87af15
      
      &.collapsed:after
        background embedurl( 'img/button.gif' ) no-repeat center center #1a1a1a
        
      &.collapsed:hover:after,
      &.collapsed:focus:after
        background embedurl( 'img/button-hover.gif' ) no-repeat center center #98c810
      
      &.collapsed:active:after
        background embedurl( 'img/button-hover.gif' ) no-repeat center center #87af15
        
  &-answer
    margin-left 15%
    margin-right 15%
      
    @media( max-width 570px)
      margin-left 30px
      margin-right 30px
    
    &__text
      border-top 1px solid #333333
      border-bottom 1px solid #333333
    
    &__wrapper
      margin 25px 30px
      
      @media( max-width 570px)
        margin 25px 0
      
    &__close
      text-align center
      font-size 8pt
      
      a
        display inline-block
        margin 23px 0 26px
        
  &.i-bitrix
  
    .b-faq
    
      &-item
        margin-bottom 40px
        border 1px solid #444
        background-color transparent
        min-height 78px
        
        a:not(.b-button)
        
          @media( max-width 540px )
            text-align center
            padding-right 30px
        
          &:after
            display none
            
        &.i-sale
          border-color $brand-color
          
          &:before
            display block
            content '%'
            position absolute
            top -14px
            right -14px
            background-color $brand-color
            border-radius 51%
            width 29px
            height 29px
            text-align center
            line-height 29px
            font-size 11pt
            color $middle-grey
            
          .b-price:not( .i-old )
            color $brand-color
            
    .b-faq-info
      position absolute
      top 15px
      right 234px
      pointer-events none
      
      @media( max-width $content-width2 )
        position static
        display block
        padding 0 0 10px 30px
        margin-top -10px
        
      @media( max-width 540px )
        text-align center
        padding-left 0
        
    
    .b-button
      position absolute
      top 15px
      right 15px
      min-width 196px
      
      @media( max-width 540px )
        position static
        margin 0 auto 30px
        display block
        width 196px
      
    .b-price
      display inline-block
      font-size 14pt
      font-weight bold
      line-height 50px
      
      sup
        font-size 9.5pt
        font-weight normal
        margin-left 5px
        line-height 52px
      
      &.i-old
        text-decoration line-through
        font-size 10.5pt
        font-weight normal
        margin-right 25px
        
        sup
          font-size 7pt
          line-height 50px
          
    .b-faq-answer__text
      border-color #444