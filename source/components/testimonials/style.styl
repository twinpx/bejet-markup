@import '../../styl/component-include.styl'

.b-testimonials
  text-align center
  
  &__item
    background-color $dark-grey
    padding 0 25px 40px
  
  &__image
    margin 0 -25px
    
    img
      width 100%
      height auto
      
  &__user
    position relative
    margin-bottom 70px
  
    img
      width 80px
      height 80px
      position absolute
      top -40px
      left 50%
      margin-left -40px
      border-radius 51%
      
  &__note
    font-size 8pt
    margin-top 35px
    
  h2
    color #fff
      
  h3
    color #fff
    margin-bottom 30px