.block_content{}
.block_content>section{
    padding-top: 0px;
    padding-bottom: 0px;
    max-width: 970px;
}
.block_content.grey_dark{
    background-color: #1b1b1b;
}
.block_content.grey{
    background-color: #262626;
}
.block_content.grey_bright{
    background-color: #444444;
}
.block_content.bottom_shadow{
    background-position: left bottom;
    background-repeat: repeat-x;
}
.block_content.grey.bottom_shadow{
    //background-image:url("/bitrix/templates/newbeget/img/grey-shadow-bottom.png");
}
.block_content.grey_bright.bottom_shadow{
    background-image:url("/bitrix/templates/newbeget/img/grey-bright-shadow-bottom.png");
}
.block_content .b-button{
    background-color: #242424;
}
.block_content .inner{
    padding: 70px 50px;
    text-align: left;
    position: relative;
}
.block_content .inner .b-button{
    position: absolute;
    bottom: 70px;
    font-size: 9pt;
}
.block_content .inner:after{
    content: " ";
    display: block;
    clear: both;
}
.block_content .left{
    float: left;
    width: 65.6%;
}
.block_content .right{
    float: left;
    width: 34.4%;
}
.block_content .invert .left,
.block_content .invert .right{
    float: right;
}
.block_content .invert .image{
    margin-right: -50px;
    margin-left: 25px;
}
.block_content .image{
    margin-right: 25px;
    margin-top: -10px;
    margin-left: -50px;
    margin-bottom: -20px;
    position: relative;
}

.block_content .image>img{
    max-width: 100%;
}
.block_content .text{
    padding-top: 80px;
    padding-bottom: 50px;
}
.block_content .text>.header{
    font-size: 15pt;
    font-weight: bold;
    line-height: 1.3;
    margin-bottom: 30px;
}

.block_content1 .image {
    margin-bottom: -21px;
	margin-top: 0px;
}
.block_content2 .image {
    margin-bottom: -16px;
}
.block_content3 .image {
    margin-bottom: -42px;
    margin-top: 0px;
}
.block_content4 .image {
    margin-bottom: -75px;
}
.block_content5 .image {
    margin-bottom: -27px
}
.block_content6 .image {
    margin-bottom: -27px;
}
.block_content1 .image{
    margin-right: -50px;
    margin-left: 25px;
}
.block_content1 {
	background: #262626; /* Old browsers */
  background: -moz-linear-gradient(top,  #262626 0%, #1b1b1b 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#262626), color-stop(100%,#1b1b1b)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  #262626 0%,#1b1b1b 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  #262626 0%,#1b1b1b 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  #262626 0%,#1b1b1b 100%); /* IE10+ */
  background: linear-gradient(to bottom,  #262626 0%,#1b1b1b 100%); /* W3C */
}

@media (max-width: 768px){
    .block_content3,
    .block_content4,
    .block_content5,
    .block_content6{
        /* display: none; */
    }
    .block_content .inner .b-button{
        position: static;
        margin-top: 10px;
        margin-bottom: 60px;
    }
    .block_content .left,
    .block_content .right{
        float: none;
        width: 100%;
    }
    .block_content>section{
        padding: 0px;
    }
    .b-content-change{
        padding-right: 10px;
        padding-left: 10px;
    }
    .block_content .inner{
        padding: 0px 30px;
    }
    .block_content .image{
        margin-top: 0px;
        margin-left: -20px !important;
        margin-right: -20px !important;
        text-align: center;
        margin-bottom: 0px;
    }
    .block_content .text{
        /*min-height: 340px;*/
        padding-bottom: 0px;
    }
	.block_content1 .image{
		padding-bottom: 40px;
	}
    .block_content2 .image,
	.block_content3 .image,
    .block_content4 .image,
    .block_content5 .image,
    .block_content6 .image{
        padding-top: 35px;
    }
    .block_content2 .text{
        padding-top: 55px;
    }
	.block_content3 .text{
		padding-bottom: 60px;
	}
    .b-footer__phone{
        text-align: center;
    }
    .b-footer__copyright{
        text-align: center;
        padding-top: 25px;
    }
}