body
  background: $bg-color
  color: $text-color
  font-family 'Open Sans', Verdana, Arial, sans-serif
  font-size 11pt
  line-height 1.7
  
a
  color $text-color
  text-decoration none
  transition( color 0.3s ease )
  
  &:hover
    color: $brand-color
    text-decoration underline

.b-large-text
  font-size 13.5pt
    
menu
  margin 0 0 45px
  padding 0
  
  li
    list-style-type none
    margin 0 0 10px
  
h1,
.b-h1
  margin 0 0 20px
  line-height 1.2
  font-size 20pt
  font-weight bold
  
.i-center
    text-align center
    color #fff
    
.i-layer
  width 520px
  margin 0 auto
  
h2
  font-size 13.5pt
  font-weight bold
  margin 30px 0 15px
  
h3
  font-size 10.5pt
  font-weight bold
  margin 30px 0 15px
  
h4
  font-weight bold
  color $grey
  
hr
  border 0
  height 1px
  padding 0
  margin 10px 0
  
  &.i-size-L
    margin 20px 0
  
  &.i-size-M
    margin 15px 0
    
p
  margin 15px 0
  
  &:first-child
    margin-top 0

ul,
ol
  margin 15px 0 15px 20px

@import 'forms.styl'

.i-align-right
  text-align right

.i-new-win
  background embedurl('img/new-win.gif') no-repeat 0 center
  padding-left 44px
  